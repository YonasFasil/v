# Production Environment Configuration for Bluehost
# Copy this file to .env and update the values

# Environment
NODE_ENV=production

# Database (MySQL on Bluehost)
# Format: mysql://username:password@host:3306/database_name
DATABASE_URL=mysql://venues_user:your_password@localhost:3306/venues_database

# Server Configuration
PORT=3000

# Security
SESSION_SECRET=your-super-secure-random-session-secret-at-least-32-characters

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Google Gemini AI
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key

# Email Configuration (Bluehost SMTP)
SMTP_HOST=mail.your-domain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@your-domain.com

# Application URLs
APP_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=5mb

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# Error Reporting (Optional)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Backup Configuration (Optional)
# BACKUP_FREQUENCY=daily
# BACKUP_RETENTION_DAYS=30

# Security Headers
CSP_REPORT_ONLY=false
FORCE_HTTPS=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_MAX_AGE=3600