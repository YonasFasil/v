// Update Firestore rules to be more permissive for testing
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Temporarily allow all authenticated users to read/write everything
    // This bypasses the complex rules that require additional Firestore calls
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}