rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tenant isolation - users can only access their tenant's data
    match /tenants/{tenantId} {
      allow read, write: if request.auth != null 
        && resource.data.users[request.auth.uid] != null;
      
      // Nested collections within tenant
      match /{collection}/{document=**} {
        allow read, write: if request.auth != null 
          && exists(/databases/$(database)/documents/tenants/$(tenantId))
          && get(/databases/$(database)/documents/tenants/$(tenantId)).data.users[request.auth.uid] != null;
      }
    }
    
    // Super admin access
    match /{document=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.superAdmin == true;
    }
  }
}